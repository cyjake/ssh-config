{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "rewriteRelativeImportExtensions": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "allowJs": true,
      "allowImportingTsExtensions": true
    }
  }
}
